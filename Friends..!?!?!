        }

        /* Keyframes for falling animation */
        @keyframes fall {
            0% {
                transform: translateY(0);
                opacity: 1; /* Fade in */
            }
            100% {
                transform: translateY(100vh); /* Fall to the bottom */
                opacity: 0; /* Fade out */
            }
        }

        /* Keyframes for twinkling effect */
        @keyframes twinkle {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.5; /* Make it dimmer */
            }
        }

        @keyframes bounce {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
